





<div class="bg-gray-100">
    <div class="container mx-auto py-8 px-4 md:px-0 md:flex md:justify-center md:items-center">
        <div class="md:w-1/2 lg:w-1/2 md:mr-2">
        <%= image_tag "one-cessna-yellow-arrow-N20HT.webp" , alt: "", class: "lg:rounded-2xl"%>
        

        </div>
        <div class="md:w-1/2 lg:w-2/3 mt-8 md:mt-0">
            
       
        <h2>Forgot your password?</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
        
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        
          <div class="actions">
            <%= f.submit "Send me reset password instructions" %>
          </div>
        <% end %>
        
        <%= render "devise/shared/links" %>
        
        </div>
    </div>
</div>



