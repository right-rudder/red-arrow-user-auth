<header class="w-full bg-home  h-screen-3/4 lg:h-screen-4/5 bg-center flex justify-center items-center">

<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
  <%= image_tag "red-arrow-logo.webp", alt: "RED ARROW LOGO", class: " mx-auto h-15 w-40 lg:w-48 top-0"%>
    <h2 class="mt-10 text-center text-5xl font-bold leading-9 tracking-tight text-white">Log In </h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <!-- form class="space-y-6" action="#" method="POST" -->

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div>
        <label for="email" class="block text-sm font-medium leading-6 text-white">Email address</label>
        <div class="mt-2">
          <span class="">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-main-red sm:text-sm sm:leading-6" %>
          <br/>
        </div>
      </div>
      <div>
        <div class="flex items-center justify-between">
          <label for="password" class="block text-sm font-medium leading-6 text-white">Password</label>
          <div class="text-sm">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "font-semibold text-white hover:text-main-red" %>
          <%- else %>
            <a href="#" class="font-semibold text-indigo-600 hover:text-indigo-500">&nbsp;</a>
          <% end %>        
          </div>
        </div>
        <div class="mt-2">
          <%= f.password_field :password, autocomplete: "current-password", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-main-red sm:text-sm sm:leading-6" %>
          <br/>
        </div>
      </div>
      <div>
        <%= f.submit "Sign in", class: "flex w-full justify-center rounded-md bg-main-red px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-main-red1 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>     
      <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
         <%= f.check_box :remember_me, class: "rounded border-gray-300 text-indigo-600 shadow-sm focus:ring-main-red mr-2" %>
         <%= f.label :remember_me, class: "text-sm text-white" %>
      </div>
      <% end %>

    <% end %> <!-- END FOR STMT this should generate the end <form/>-->

    <p class="mt-10 text-center text-sm text-white">
      No account, yet? &nbsp;
      <%= link_to "Sign up", new_registration_path(resource_name), class: "font-semibold leading-6 text-white hover:text-main-red" %>
    </p>
  </div>
</div>


