<!-- app/views/admin/users/index.html.erb -->
<h1>User Management</h1>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Name</th>
      <th>Student</th>
      <th>Instructor</th>
      <th>Maintenance</th>
      <th>Guest</th>
      <th>Front Desk</th>
      <th>Is Admin</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.first_name %> <%= user.middle_initial %> <%= user.last_name %></td>
        <td><%= user.is_student ? 'Yes' : 'No' %></td>
        <td><%= user.is_instructor ? 'Yes' : 'No' %></td>
        <td><%= user.is_maintenance ? 'Yes' : 'No' %></td>
        <td><%= user.is_guest ? 'Yes' : 'No' %></td>     
        <td><%= user.is_frontoffice ? 'Yes' : 'No' %></td>   
        <td><%= user.is_admin ? 'Yes' : 'No' %></td>
        <td>
          <%= link_to 'Edit', edit_admin_user_path(user) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
