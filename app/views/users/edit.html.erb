<h1>Edit Your Profile</h1>

<!-- %= render 'shared/errors', object: @user % -->
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :middle_initial %>
    <%= f.text_field :middle_initial, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :birthday %>
    <%= f.date_field :birthday, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :address_1 %>
    <%= f.text_field :address_1, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :address_2 %>
    <%= f.text_field :address_2, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :emergency_contact_name %>
    <%= f.text_field :emergency_contact_name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :emergency_contact_number %>
    <%= f.text_field :emergency_contact_number, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Update User', class: 'btn btn-primary' %>
  </div>
<% end %> <!-- END FOR STMT this should generate the end <form/>-->

